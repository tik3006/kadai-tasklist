<% if logged_in? %>
   
   <div class="row">
  <p>Login User...: <%= current_user.name %></p>
   
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>tasks</th>
        <th>status</th>
      </tr>
    <tbody>
   <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
     </table>
  </div>
  <%= link_to 'add new task', new_task_path, class: "btn btn-lg btn-primary" %>
 
<% else %>
  
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Task-List</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>